<!-- SHOWIMG.EJS -->
<% let url = `/pages/${id}/videos/${video._id}/` %>
<%- include('partials/header'); %>
<div class="ui raised very padded segment black container">
    <div class="ui left rail">
      <div class="ui segment">
        <img src="/videos/<%= video.name %>/<%= video.image %>" style="width: 100%">
    </div>
</div>
    <div class="ui secondary large menu">
        <div class="header item">
            <a href="<%= `/pages/${id}` %>"><i class="file alternate outline icon"></i><%= video.name %></a>
        </div>
        <div class="right menu">
            <a href="/pages/<%= id %>" class="item">Edit Video<i class="icon edit"></i></a>
            <a class="item submit-delete"><i class="close icon"></i>Delete Video</a>
            <form class="hidden-form" action="<%= video._id %>?_m=DELETE" method="POST"></form>
        </div>
    </div>
    <div class="ui segments">
        <div class="ui segment black">
            <%= video.description %>
        </div>
        <div class="segment black">
            <video src='/videos/<%= video.name %>/<%= video.video %>' controls type='video/mp4' style="width: 100%;"></video>
        </div>
    </div>
</div>
<%- include('partials/footer'); %> 