<%- include('partials/header'); %>
<div class="ui container raised very padded segment">
    <div class="ui left rail">
        <div class="ui card">
            <div class="image">
                <img src="<%= '/' + story.image %>" alt="">
            </div>
            <div class="content">
                <h4>Current Image</h4>
            </div>
        </div>
        <div class="ui card">
            <div class="image">
                <img id="preview-img" src="#" alt="">
            </div>
            <div class="content">
                <h4 id="preview-text">No Image Selected</h4>
            </div>
        </div>
    </div>
    <h1><i class="file alternate icon"></i>Edit Story - <%= story.name %></h1>
    <hr>
    <br>
    <form class="ui form large" method="POST" action="/pages/<%= pageid %>/stories/<%= story._id %>?_m=PUT" enctype='multipart/form-data'>
        <div class="field">
            <label>Story Name</label>
            <input type="text" name="name" value="<%= story.name %>">
        </div>
        <br>
        <div class="field">
            <label>Story</label> 
            <textarea name="story" rows=8><%= story.story %></textarea>
        </div>
        <br>
        <div class="field">
            <label>Image</label>
            <div class="ui segment" id="drop-img">
                <span class="ui header">DROP IMAGE HERE</span>
                <input id="file-input" type="file" name="img" accept="image/*">
            </div>
        </div>
        <br>
        <button class="ui button huge" type="submit"><i class="save outline icon"></i>SUBMIT</button>
    </form>
</div>
<%- include('partials/footer'); %>