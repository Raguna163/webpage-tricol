<!-- FULLGALLERY.EJS -->
<%- include('../partials/header'); %>
<div class="ui raised very padded segment black" id="full-gallery">
	<div class="ui large menu">
		<div class="header item">
			<a href="/pages/<%= id %>"><i class="file alternate outline icon"></i><%= gallery.name %></a>
		</div>
		<div class="right menu">
			<a href="/pages/<%= id %>" class="item">Edit Gallery<i class="icon edit"></i></a>
			<a href="<%= gallery._id %>/add" class="item">Add Images<i class="icon plus"></i></a>
			<a class="item submit-delete"><i class="close icon"></i>Delete Gallery</a>
			<form class="hidden-form" action="<%= gallery._id %>?_m=DELETE" method="POST"></form>
		</div>
	</div>
	<div class="ui segment black">
		<div class="content">
			<p class="fantasy-content"><%= gallery.description %></p>
		</div>
	</div>
	<% if (gallery.images.length > 0) { -%>
		<div class="ui grid segment black" id="full-gallery-images">
			<% gallery.images.forEach((img,idx) => { -%>
				<a class="column" href="<%= gallery._id %>/<%= idx %>" style="width: <%= 17 * img.meta.aspect %>%">
					<img src='<%= img.path %>'>
				</a>
			<% }) -%>
		</div>
	<% } -%>
	<div class="ui divider"></div>
	<form class="ui form" method="POST" action="<%= gallery._id %>" enctype='multipart/form-data'>
		<div class="field">
			<label>Image</label>
			<div class="ui segment" id="drop-img">
				<span class="ui header">DROP IMAGE HERE</span>
				<input id="multi-file-input" type="file" name="gallery"/>
			</div>
		</div>
		<input class="hidden-form" type="text" name="name" value="<%= gallery.name %>" />
		<br>
		<button class="ui button large black" type="submit"><i class="save outline icon"></i>SUBMIT</button>
		<hr>
		<div class="ui grid" id="multi-preview-img">

		</div>
	</form>
</div>
<script type="text/javascript" src="/js/multi-file.js"></script>
<%- include('../partials/footer'); %>