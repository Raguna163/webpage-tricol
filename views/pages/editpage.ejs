<%- include('../partials/header'); %>
<div class="ui container raised very padded segment">
	<div class="ui left rail">
		<div class="ui card">
			<div class="image">
				<img src="<%= '/' + page.image %>" alt="">
			</div>
			<div class="content">
				<h4>Current Image</h4>
			</div>
		</div>
		<div class="ui card">
			<div class="image">
				<img id="preview-img" src="#" alt="">
			</div>
			<div class="content">
				<h4 id="preview-text">No New Image</h4>
			</div>
		</div>
	</div>
	<h1><i class="file alternate icon"></i>Edit - <%= page.name %></h1>
	<hr>
	<br>
	<form class="ui form large" method="POST" action="/pages/<%= page._id %>" enctype='multipart/form-data'>
		<div class="field">
			<label>Page Name</label>
			<input type="text" name="name" value="<%= page.name %>">
		</div>
		<br>
		<div class="field">
			<label>Page Description</label>
			<input type="text" name="description" value="<%= page.description %>">
		</div>
		<br>
		<div class="field">
		    <label>Categories</label>
		    <input type="text" name="category" value="<%= page.categories.join(', ') %>">
		</div>
		<br>
		<div class="field">
			<label>Image</label>
			<div class="ui segment" id="drop-img">
				<span class="ui header">DROP IMAGE HERE</span>
				<input id="file-input" type="file" name="img" accept="image/*">
			</div>
		</div>
		<br>
		<button class="ui button huge" type="submit"><i class="save outline icon"></i>SUBMIT</button>
	</form>
</div>
<%- include('../partials/footer'); %>