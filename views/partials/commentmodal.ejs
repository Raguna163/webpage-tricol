<div class="ui tiny modal" id="<%= type %>">
  <i class="close icon"></i>
  <div class="header">New Comment for <%= profile.username %></div>
  <div class="content">
    <form class="ui form" method="POST" action="/users/view/<%= profile._id %>/">
        <div class="field">
            <label>Commenting as <%= user.username %></label>
            <input type="text" name="comment" placeholder="Comment..." />
        </div>
        <button type="submit" class="ui button <%= user.colour %>">Submit</button>
    </form>
  </div>
</div>